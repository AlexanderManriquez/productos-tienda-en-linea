<section class="new-product">
  <h2>{{title}}</h2>

  {{#if error}}
    <div class="form-error">
      <p>{{error}}</p>
    </div>
  {{/if}}

  <form id="form-new-product" action="/products" method="POST" novalidate>

    <div class="form-group">
      <label for="name">Nombre del Producto:</label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        value="{{oldData.name}}" 
        required minlength="2" maxlength="100" 
        placeholder="Ej: Consola Modelo X" 
        autocomplete="off">
      <small id="nameHelp" class="form-help">Nombre Visible del producto (2-100 caracteres)</small>
      <small class="field-error" id="nameError"></small>
    </div>

    <div class="form-group">
      <label for="price">Precio:</label>
      <input 
        type="number" 
        id="price" 
        name="price" 
        value="{{oldData.price}}" 
        required min="0" 
        placeholder="Ej: 100000" 
        aria-describedby="priceHelp">
      <small id="priceHelp" class="form-help">Precio en moneda local (número positivo)</small>
      <small class="field-error" id="priceError"></small> 
    </div>

    <div class="form-group">
      <label for="description">Descripción:</label>
      <textarea 
        id="description" 
        name="description" 
        required 
        rows="3" 
        maxlength="500"
        placeholder="Descripción breve del producto" aria-describedby="descHelp">>{{oldData.description}}</textarea>
      <small id="descHelp" class="form-help">Descripción del producto (máximo 500 caracteres)</small>
      <small class="field-error" id="descriptionError"></small>
    </div>

    <div class="form-group">
      <label for="stock">Stock disponible:</label>
      <input 
        type="number" 
        id="stock" 
        name="stock" 
        value="{{oldData.stock}}" 
        required 
        min="0" 
        step="1" 
        placeholder="Ej: 50" aria-describedby="stockHelp">
      <small id="stockHelp" class="form-help">Cantidad disponible en inventario</small>
      <small class="field-error" id="stockError"></small>
    </div>

    <button type="submit" class="btn">Agregar Producto</button>
  </form>
</section>

<script src="/js/newProduct.js"></script>

